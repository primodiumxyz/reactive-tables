{
  "name": "assets",
  "version": "1.0.0",
  "license": "MIT",
  "types": "./types",
  "scripts": {
    "copy-tileset-images": "cp tilesets/images/* ../client/public/assets/tilesets/",
    "export": "pnpm export-sprites && pnpm export-audio",
    "export-audio": "audiosprite --channels 2 --loop background --output ../client/public/assets/audio/atlas --path ./assets/audio/ audio/**/*.ogg audio/*.ogg",
    "export-sprites": "pnpm generate-multiatlas-sprites && pnpm copy-tileset-images",
    "generate-multiatlas-sprites": "node ./scripts/cli.mjs --project ./config-sprites.json"
  },
  "devDependencies": {
    "@mapeditor/tiled-api": "^1.8.2",
    "@types/ejs": "^3.1.1",
    "@types/ffmpeg": "^1.0.7",
    "@types/glob": "^7.2.0",
    "@types/node": "^18.17.14",
    "@types/optimist": "^0.0.33",
    "audiosprite": "^0.7.2",
    "chalk": "^5.3.0",
    "ejs": "^3.1.8",
    "ethers": "^5.7.0",
    "free-tex-packer-cli": "^0.3.0",
    "free-tex-packer-core": "^0.3.4",
    "glob": "^8.0.3",
    "optimist": "^0.6.1",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4",
    "xml-js": "^1.6.11"
  }
}
